doctype html
html
  head
    title Sculptures Search Results
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
  body
    h1 Sculptures Search Results

    .container-fluid
      .row
        
        -
          const results = [
            { sculptures_name: "The Thinker", sculptures_height: 182, material: "Bronze" },
            { sculptures_name: "Venus de Milo", sculptures_height : 203, material: "Marble" },
            { sculptures_name: "David", sculptures_height: 517, material: "Marble" }
          ]

        
        each item, index in results
          .col-sm-2
            h2 #{item.sculptures_name}
            p Height : #{item.sculptures_height} years
            p material: #{item.material}
            button(class="buy-btn" data-index=index data-name=item.sculptures_name) Buy

    // Add a script to bind events for the buy buttons
    script.
      document.addEventListener('DOMContentLoaded', function() {
        const buyButtons = document.querySelectorAll('.buy-btn');
        buyButtons.forEach(button => {
          button.addEventListener('click', function() {
            const index = button.getAttribute('data-index');
            const sculptures_name = button.getAttribute('data-name');
            buy(index, sculptures_name);
          });
        });
      });

      function buy(index, sculptures_name) {
        alert("You purchased item " + index + ": " + sculptures_name);
      }